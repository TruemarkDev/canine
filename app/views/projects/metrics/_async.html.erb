<%= render "projects/metrics/live_metrics", pods: %>

<div class="flex flex-row gap-4 mt-8">
  <%= line_chart(
    parse_cpu_metrics(metrics),
    suffix: "%",
    xtitle: "CPU Usage",
    ytitle: "Percentage",
    library: { scales: { y: { ticks: { suggestedMin: 0, suggestedMax: 100 } } } }
  ) %>
  <%= line_chart(
    parse_memory_metrics(metrics),
    suffix: "%",
    xtitle: "Memory Usage",
    ytitle: "Percentage",
    library: { scales: { y: { ticks: { suggestedMin: 0, suggestedMax: 100 } } } }
  ) %>
</div>
